<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://specialtyBrowse.caption"
        focusComponent="specialtiesTable"
        messagesPack="com.company.untitled.web.screens.specialty">
    <data readOnly="true">
        <collection id="specialtiesDc"
                    class="com.company.untitled.college.Specialty">
            <view extends="_local">
                <property name="department" view="_minimal"/>
            </view>
            <loader id="specialtiesDl">
                <query>
                    <![CDATA[select e from untitled_Specialty e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="specialtiesTable"
            spacing="true">
        <groupTable id="specialtiesTable"
                    width="100%"
                    dataContainer="specialtiesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="code"/>
                <column id="name"/>
                <column id="department"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="specialtiesTable.create"/>
                <button id="editBtn" action="specialtiesTable.edit"/>
                <button id="removeBtn" action="specialtiesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
